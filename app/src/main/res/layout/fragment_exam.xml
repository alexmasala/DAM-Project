<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExamFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tvExamFragment"
        android:layout_width="113dp"
        android:layout_height="49dp"
        android:layout_gravity="top"
        android:layout_marginTop="24dp"
        android:text="Examens"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/btnShowExam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />

    <Button
        android:id="@+id/btnShowExam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Exams"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvExamFragment"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.472" />

</androidx.constraintlayout.widget.ConstraintLayout>